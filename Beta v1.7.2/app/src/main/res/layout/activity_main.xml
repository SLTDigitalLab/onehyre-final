<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context=".MainActivity"
    android:gravity="center">

    <!--The main register view-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/regli"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-85dp"
        android:layout_marginBottom="-150dp">


        <!--            app:srcCompat="@drawable/logo" -->

        <!--            app:srcCompat="@drawable/ic_baseline_phone_android_24"-->

        <!--            android:background="@drawable/button_desgin"-->


        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="7XXXXXXXX"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:maxLength="9"
            android:paddingStart="15dp"
            android:textAlignment="textStart"
            android:textColor="@color/texts"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.269"
            app:layout_constraintStart_toEndOf="@+id/countrycode"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:contentDescription="hello"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:srcCompat="@drawable/ic_baseline_phone_android_24"
            tools:ignore="VectorDrawableCompat" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <CheckBox
                android:id="@+id/checkBoxTermsAndConditions"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:text="@string/agree_to_terms_and_conditions_note"
                android:textColor="@color/pale_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textViewShowTermsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/terms_and_conditions"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/checkBoxTermsAndConditions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/checkBoxTermsAndConditions"
                app:layout_constraintTop_toTopOf="@+id/checkBoxTermsAndConditions" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/phoneContinueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_desgin"
            android:backgroundTint="@color/buttons"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white_lace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/phone_number_for_verification_sign_up"
            android:textAlignment="textStart"
            android:textColor="@color/white_lace"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginTop="50dp"
            android:contentDescription="hello"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/main_app_logo" />

        <!--            app:srcCompat="@drawable/taxi" -->


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Registering for an Enterprise Company? Sign up from "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/sign_up"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneEt" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/ent_comp_signup"
            android:textAlignment="center"
            android:textColor="#80EF85"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/phoneEt" />

        <TextView
            android:id="@+id/countrycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="18dp"
            android:text="+94"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp"
        android:id="@+id/codeLi"
        android:visibility="gone">


        <TextView
            android:id="@+id/textView31"
            android:layout_width="274dp"
            android:layout_height="46dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="248dp"
            android:layout_marginEnd="78dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Verification code"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/codeSentDescription"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="OTP has been sent to"
            android:textAlignment="center"
            android:textColor="#fff"
            app:layout_constraintBottom_toTopOf="@+id/codeEt"
            app:layout_constraintTop_toBottomOf="@+id/textView31"
            tools:layout_editor_absoluteX="59dp" />

        <TextView
            android:id="@+id/resendCodeTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="@string/resend_code_ign_up"
            android:textAlignment="center"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@+id/codeEt"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/codeSubmitBtn"
            android:layout_width="221dp"
            android:layout_height="55dp"
            android:layout_marginStart="167dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="160dp"

            android:text="verify"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/start_button"/>
        <!--            android:background="@drawable/start_button"-->

        <EditText
            android:id="@+id/codeEt"
            android:layout_width="297dp"
            android:layout_height="68dp"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="63dp"
            android:ems="10"
            android:hint="@string/enter_otp"
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/codeSubmitBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="350dp"
            android:layout_height="191dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/main_app_logo"

            />
        <!--            app:srcCompat="@drawable/logo" -->



    </androidx.constraintlayout.widget.ConstraintLayout>



    <FrameLayout
        android:id="@+id/ad_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        />




</androidx.constraintlayout.widget.ConstraintLayout>