<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SystemOfflineActivity"
    android:background="#042272">

    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/system_maintenance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tvMainTitleSysOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/sys_offline"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tvSysDownMsg"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text="system is under maintenance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:layout_below="@+id/tvMainTitleSysOffline"/>


    <TextView
        android:id="@+id/tvSysDownContact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:text="Contact support:"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/tvSysDownMsg"/>


    <ImageView
        android:id="@+id/ivSysDownContactEmail"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:textColor="@color/white"
        android:src="@drawable/ic_email_black"
        android:textSize="13dp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/tvSysDownContact"/>

    <TextView
        android:id="@+id/tvSysDownContactEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:text="sample12345@email.com"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/tvSysDownContact"
        android:layout_toRightOf="@+id/ivSysDownContactEmail"/>

    <ImageView
        android:id="@+id/ivSysDownContactTP"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:textColor="@color/white"
        android:src="@drawable/ic_tp_black"
        android:textSize="13dp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/ivSysDownContactEmail"/>

    <TextView
        android:id="@+id/tvSysDownContactTP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:text="+94770000000"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/tvSysDownContactEmail"
        android:layout_toRightOf="@+id/ivSysDownContactTP"/>

    <FrameLayout
        android:id="@+id/ad_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:ignore="MissingConstraints" />



</RelativeLayout>