<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabEnterpriseInfo">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/background2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivEntName"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_company50px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/highlight"/>

            <TextView
                android:id="@+id/entName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/samsung_sharp_sans_bold"
                android:text="@string/enterprise_name_text"
                android:textColor="@color/flake_white"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivEntName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/samsung_one_700"
                android:text="Colombo Taxi"
                android:textColor="@color/flake_white"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/ivEntName"
                app:layout_constraintTop_toBottomOf="@+id/entName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout23">

            <ImageView
                android:id="@+id/ivEntId"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_company_id2_50px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/highlight" />

            <TextView
                android:id="@+id/companyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/samsung_sharp_sans_bold"
                android:text="@string/enterprise_code_text"
                android:textColor="@color/flake_white"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivEntId"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDCompanyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/samsung_one_700"
                android:text="ENT1692946048"
                android:textColor="@color/flake_white"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/ivEntId"
                app:layout_constraintTop_toBottomOf="@+id/companyId" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout25"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/ivEntEmail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_email_50px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/highlight"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/samsung_sharp_sans_bold"
                android:text="@string/email_text"
                android:textColor="@color/flake_white"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivEntEmail"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDCompanyMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/samsung_one_700"
                android:text="exampleenterprise@eent.lk"
                android:textColor="@color/flake_white"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/ivEntEmail"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout24"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/ivHotline"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_company_hotline50px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/highlight"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/samsung_sharp_sans_bold"
                android:text="@string/hotline_text"
                android:textColor="@color/flake_white"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivHotline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDCompanyPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/samsung_one_700"
                android:text="+94472082709"
                android:textColor="@color/flake_white"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/ivHotline"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</ScrollView>