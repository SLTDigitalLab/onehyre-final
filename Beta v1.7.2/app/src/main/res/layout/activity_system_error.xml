<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SystemErrorActivity"
    android:background="#042272">


    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/system_down"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tvMainTitleSysDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="System Is Down"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/tvSysErrMsg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:text="There was an error with our systems and We are currently looking into it. The App will be available soon! \nSorry for the inconveniences!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:layout_below="@+id/tvMainTitleSysDown"/>
    <TextView
        android:id="@+id/tvSysDownContact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:text="Contact us: \nE-Mail: sample1234@gmail.com\nT.P.: +94770000000"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/tvSysErrMsg"/>

    <FrameLayout
        android:id="@+id/ad_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:ignore="MissingConstraints" />



</RelativeLayout>