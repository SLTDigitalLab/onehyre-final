<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background2"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/highlight"
            app:cardCornerRadius="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtDayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/samsung_sharp_sans_bold"
                    android:text="@string/day_time"
                    android:textAlignment="center"
                    android:textColor="@color/background2"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/texts"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDayTime" />

                <ImageView
                    android:id="@+id/imageViewDayTime"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_plumpy_sun96px_2"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout26"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout26" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/view3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewDayTime"
                    app:layout_constraintTop_toBottomOf="@+id/view2">

                    <TextView
                        android:id="@+id/txtStartingFeeDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="@string/starting_fee"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/day_sFee_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="update is required"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtStartingFeeDay"
                        app:layout_constraintStart_toEndOf="@+id/view"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtTwoKMDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="@string/two_km"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtStartingFeeDay" />

                    <TextView
                        android:id="@+id/d_twokm_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="update is required"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtWaitingFeeDay"
                        app:layout_constraintStart_toEndOf="@+id/view"
                        app:layout_constraintTop_toBottomOf="@+id/day_sFee_txt" />

                    <TextView
                        android:id="@+id/txtWaitingFeeDay"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="@string/waiting_fee"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTwoKMDay" />

                    <TextView
                        android:id="@+id/d_wait_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="update is required"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtWaitingFeeDay"
                        app:layout_constraintStart_toEndOf="@+id/view"
                        app:layout_constraintTop_toBottomOf="@+id/d_twokm_fee" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/background2"
                        android:visibility="invisible"
                        app:layout_constraintStart_toEndOf="@+id/txtTwoKMDay"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/background2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            app:cardBackgroundColor="@color/highlight"
            app:cardCornerRadius="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3"
            android:layout_marginTop="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtNightime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/samsung_sharp_sans_bold"
                    android:text="@string/night_time"
                    android:textAlignment="center"
                    android:textColor="@color/background2"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/nview2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/texts"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNightime" />

                <ImageView
                    android:id="@+id/imageViewNightTime"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_plumpy_moon96px"
                    app:layout_constraintBottom_toBottomOf="@+id/nconstraintLayout26"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/nconstraintLayout26" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nconstraintLayout26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/nview3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewNightTime"
                    app:layout_constraintTop_toBottomOf="@+id/nview2">

                    <TextView
                        android:id="@+id/txtStartingFeeNight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="@string/starting_fee"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/n_starting_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="update is required"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtStartingFeeNight"
                        app:layout_constraintStart_toEndOf="@+id/nview"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtTwoKMNight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="@string/two_km"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtStartingFeeNight" />

                    <TextView
                        android:id="@+id/n_twokm_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="update is required"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtWaitingFeeNight"
                        app:layout_constraintStart_toEndOf="@+id/nview"
                        app:layout_constraintTop_toBottomOf="@+id/n_starting_fee" />

                    <TextView
                        android:id="@+id/txtWaitingFeeNight"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="@string/waiting_fee"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTwoKMNight" />

                    <TextView
                        android:id="@+id/n_waiting_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/samsung_one_700"
                        android:text="update is required"
                        android:textColor="@color/texts"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtWaitingFeeNight"
                        app:layout_constraintStart_toEndOf="@+id/nview"
                        app:layout_constraintTop_toBottomOf="@+id/n_twokm_fee" />

                    <View
                        android:id="@+id/nview"
                        android:layout_width="1dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/background2"
                        android:visibility="invisible"
                        app:layout_constraintStart_toEndOf="@+id/txtTwoKMNight"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/nview3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/background2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateTripDetails_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_desgin"
            android:backgroundTint="@color/buttons"
            android:fontFamily="@font/samsung_sharp_sans_bold"
            android:text="@string/button_text_update"
            android:textAllCaps="false"
            android:textColor="@color/white_lace"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"
            android:layout_marginTop="80dp"/>


        <TextView
            android:id="@+id/txtUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_updated"
            android:textColor="@color/flake_white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtUpdatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtUT"
            android:text="05 sep 2023, 05:52:18 PM"
            android:textColor="@color/flake_white"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtUT"
            app:layout_constraintStart_toEndOf="@+id/txtUT"
            app:layout_constraintTop_toTopOf="@+id/txtUT" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>