<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverTypeSelection"
    android:padding="16dp"
    android:background="@color/background2">

    <!--> 1st Card View<!-->
    <androidx.cardview.widget.CardView
        android:id="@+id/topTitleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="30dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topTitleContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/highlight"
            android:padding="16dp">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupTopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="collTopTitle"/>

            <TextView
                android:id="@+id/collTopTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_your_course"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/graphite_grey"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtTopTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/cutstom_textview_rounded_corners"
                android:backgroundTint="@color/highlight"
                android:gravity="center_vertical"
                android:text="@string/select_your_course"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/texts"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlCompat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/individualCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="50dp"
        app:cardCornerRadius="28dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitleCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/individualContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/highlight"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Individual"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/midnight_blue"/>

            <ImageView
                android:id="@+id/ivMoreInfoArt"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/individual_taxi_driver"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIndividual"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:text="@string/individual"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white_lace"
                android:background="@drawable/button_classic_modern"
                android:backgroundTint="@color/buttons"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivMoreInfoArt"
                app:layout_constraintVertical_bias="0.1"/>

            <TextView
                android:id="@+id/moreInfoTextViewIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_information"
                android:drawableRight="@drawable/ic_expand_down16"
                android:drawablePadding="2dp"
                android:textAlignment="center"
                android:textColor="@color/graphite_grey"
                app:layout_constraintTop_toBottomOf="@+id/btnIndividual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="txtTitle, ind_des, ivMoreInfoArt, moreInfoExpandedIndividual"/>

            <!-- Additional content to show when expanded -->
            <TextView
                android:id="@+id/ind_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/individual_description"
                android:textAlignment="center"
                android:textColor="@color/graphite_grey"
                app:layout_constraintTop_toBottomOf="@id/moreInfoTextViewIndividual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/moreInfoExpandedIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/less_information"
                android:drawableRight="@drawable/ic_colla_up16"
                android:drawablePadding="2dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/graphite_grey"
                app:layout_constraintTop_toBottomOf="@+id/ind_des"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <!--> 2nd Card View<!-->
    <androidx.cardview.widget.CardView
        android:id="@+id/enterpriseCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        app:cardCornerRadius="28dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/individualCard"
        android:layout_marginTop="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/enterpriseContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/highlight"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/txtTitleEnterprise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enterprise"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/midnight_blue"/>

            <ImageView
                android:id="@+id/ivMoreInfoArtEnterprise"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/enterprise_taxi_driver"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleEnterprise"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEnterprise"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:text="@string/enterprise"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white_lace"
                android:background="@drawable/button_classic_modern"
                android:backgroundTint="@color/buttons"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivMoreInfoArtEnterprise"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/moreInfoTextViewEnterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/more_information"
                android:drawableRight="@drawable/ic_expand_down16"
                android:drawablePadding="2dp"
                android:textAlignment="center"
                android:textColor="@color/graphite_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEnterprise" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupEnterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="txtTitleEnterprise, ent_des, ivMoreInfoArtEnterprise, moreInfoExpandedEnterprise" />

            <!-- Additional content to show when expanded -->
            <TextView
                android:id="@+id/ent_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/graphite_grey"
                android:text="@string/enterprise_description"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moreInfoTextViewEnterprise" />

            <TextView
                android:id="@+id/moreInfoExpandedEnterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Less information"
                android:drawableRight="@drawable/ic_colla_up16"
                android:drawablePadding="2dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/graphite_grey"
                app:layout_constraintTop_toBottomOf="@+id/ent_des"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!--> 3rd Card View<!-->
    <androidx.cardview.widget.CardView
        android:id="@+id/toolBarCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:elevation="30dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolBarContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/highlight"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageViewSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_call"
                android:tooltipText="Call support"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewQuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_quit_green64"
                android:tooltipText="Quit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_help_question_mark64"
                android:tooltipText="Help"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>